<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.abkhas.app">

    <!-- الأذونات المطلوبة -->
    
    <!-- الإنترنت (إلزامي) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    
    <!-- الموقع (اختياري) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    
    <!-- الكاميرا (اختياري) -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- الصور والملفات (اختياري) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    
    <!-- التقويم والتذكيرات (اختياري) -->
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    
    <!-- الإشعارات (اختياري) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- معرف التتبع (اختياري) -->
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />
    
    <!-- الميزات المتطلبة -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    
    <!-- معلومات التطبيق -->
    <application
        android:allowBackup="false"
        android:debuggable="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Abkhas"
        android:usesCleartextTraffic="false"
        android:requestLegacyExternalStorage="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        tools:targetApi="33">

        <!-- النشاط الرئيسي -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Abkhas"
            android:hardwareAccelerated="true"
            android:largeHeap="false"
            android:screenOrientation="sensorPortrait">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- دعم الروابط العميقة -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="abkhas.app" />
                <data android:scheme="https" android:host="app.abkhas.app" />
                <data android:scheme="abkhas" />
            </intent-filter>
        </activity>

        <!-- خدمة الإشعارات -->
        <service
            android:name=".services.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- موفر المحتوى (للمشاركة الآمنة للملفات) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.abkhas.app.fileprovider"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- خدمة التحديث في الخلفية -->
        <service
            android:name=".services.UpdateCheckService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!-- إعدادات التطبيق -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary_blue" />

        <!-- معرف Google -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- إعدادات Safety Net -->
        <meta-data
            android:name="com.google.android.gms.safetynet.API_KEY"
            android:value="YOUR_SAFETY_NET_API_KEY" />

    </application>

    <!-- أطوال إصدارات Android المدعومة -->
    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="34" />

</manifest>
